<h1>Edit Article</h1>



<% if @article.errors.any? %>
    <h2>This action cannot be taken because of the following errors</h2>
        <ul>
            <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <%end%>
        </ul>
<%end%>



<%= form_for @article do |f| %>
    <div class="form-group">
        <div class="control-label col-md-2">
        <%=  f.label :title %>:
        </div>
        <div class="col-md-10">
        <%= f.text_field :title, class: "form-control", autofocus: true %>
        </div>
    </div>
    
     <div class="form-group">
        <div class="control-label col-md-2">
        <%=  f.label :description %>:
        </div>
        <div class="col-md-10">
        <%= f.text_area :description, class: "form-control", rows: 5 %>
        </div>
    </div>
    <div class="form-group">
          <%= f.submit class: "btn btn-primary btn-lrg" %>
    </div>
  

<%end%>

<%= link_to "See all articles", articles_path, class: "btn btn-lrg btn-default" %>

